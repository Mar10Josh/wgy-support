{
    "name": "wgy-support",
    "displayName": "wgy support",
    "description": "Add support for .wgy files for Widgy in NPM!",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "widgy",
            "aliases": ["Widgy Widget", "widgy"],
            "extensions": [".wgy",".widget"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "widgy",
            "scopeName": "",
            "path": "./syntaxes/widgy.tmLanguage.json"
        }]
    }
}